#!/bin/bash

if ! [[ $2 ]]
then
  echo "Performs an audio-only download of the given stream. (Usage: download-stream <filename minus the extension> <video stream URL>)"
  exit 1
fi

FILENAME="$1"
URL="$2"

# -qscale:a           set the audio quality (0 is the best)
# -vn                 audio only
# -acodec libmp3lame  use the LAME MP3 encoder for the output format
ffmpeg -i "$URL" -qscale:a 0 -vn -acodec libmp3lame "$FILENAME".mp3
