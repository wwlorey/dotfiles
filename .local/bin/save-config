#!/bin/bash

dirs=("$HOME/Repos/dotfiles" "$HOME/Sync/.dotfiles")

for dir in "${dirs[@]}";
do
    if [[ -d "$dir" ]]
    then
        cd "$dir"
        echo "---$dir---"
        rsync --archive --verbose --recursive --exclude={.git*,README.md} . ~/
    else
        echo "'$dir' does not exist."
    fi
done 

brewPacks="$HOME/Sync/.brew-packages"
brewCasks="$HOME/Sync/.brew-casks"

brew list --installed-on-request > "$brewPacks"
brew list --cask > "$brewCasks"
