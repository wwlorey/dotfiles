#!/bin/bash

if [ -z "$1" ]
then
	echo "Error: No destination provided for backup."
	exit 1;
fi

# Save GNOME configuration
dconf dump / > ~/.dconf-backup
# To restore:
# dconf load / < ~/.dconf-backup

# Save list of installed packages
pacman -Q > ~/.packages

# Backup the home directory
rsync --archive --progress --verbose --exclude={.cache,.config,.viminfo} ~/ "$1"
