    \ 'Renamed'   :'‚û°',
    \ 'Unmerged'  :'‚ñµ',
    \ 'Deleted'   :'ùó´',
    \ 'Dirty'     :'‚ú±',
    \ 'Ignored'   :'üôà',
    \ 'Clean'     :'‚úî',
    \ 'Unknown'   :'?',
    \ }

" ctrlp
